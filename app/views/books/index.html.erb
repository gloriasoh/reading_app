<div class="content">
<a1>BOOK LIST</a1><br><br>

<table>
  <thead>
    <tr>
      <th>Author</th>
      <th>Title</th>
      <th>Read?</th>
      <th colspan="3"></th>
    </tr>
    </div>
  </thead>

  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.name %></td>
      <td><%= book.author %></td>
      <td>
        <% if book.read %>
          <p>YES</p>
        <% else %>
          <B><p>NO</p></B>
        <% end %>
      </td>

      <td><%= link_to 'Show', book_path(book), { class: "badge badge-light" }%></td>
      <td><%= link_to 'Edit', edit_book_path(book), { class: "badge badge-light" } %></td>
      <td><%= link_to 'Delete', book_path(book), method: :delete, data: { confirm: 'Are you sure?' },  class: "badge badge-light"%></td>
    </tr>
    <% end %>


  </tbody>
  </table>

<br><br>
<h3><%= link_to 'CREATE NEW', new_book_path, { class: "badge badge-success" }  %></h3>
<br>



</div>
